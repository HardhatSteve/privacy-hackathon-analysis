{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "declaration": true,
    "outDir": "./target",
    "rootDir": "./",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["mocha", "chai", "node"],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "tests/**/*.ts",
    "tests/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "frontend",
    "target",
    "programs"
  ]
}
