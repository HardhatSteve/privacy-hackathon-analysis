{
    "compilerOptions": {
        "types": [
            "mocha",
            "chai"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ],
        "lib": [
            "es2020"
        ],
        "module": "commonjs",
        "target": "es2020",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist",
        "strict": true
    },
    "include": [
        "tests/**/*",
        "cli/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}