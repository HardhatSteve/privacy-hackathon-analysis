{
  "name": "priverc",
  "version": "1.0.0",
  "description": "CLI tool for deploying privacy-enhanced ERC20 tokens on Avalanche",
  "main": "dist/index.js",
  "bin": {
    "priverc": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "compile": "hardhat compile",
    "deploy:local": "hardhat run scripts/deploy.ts --network localhost",
    "deploy:fuji": "hardhat run scripts/deploy.ts --network fuji",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network mainnet",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "mocha 'src/**/*.test.js'",
    "postinstall": "npx hardhat compile & npx hardhat zkit make --force && npx hardhat zkit verifiers",
    "lint:sol": "solhint '**/*.sol' --config ./.solhint.json --ignore-path ./.solhintignore --max-warnings 0 && npx prettier --check '**/*.sol' --config ./.prettierrc",
    "lint:ts": "npx biome lint .",
    "lint": "npm run lint:sol && npm run lint:ts"
  },
  "keywords": [
    "avalanche",
    "erc20",
    "privacy",
    "token",
    "deployment"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.1",
    "@solarity/zkit": "^0.3.7",
    "@types/qrcode": "^1.5.5",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.13.7",
    "ora": "^5.4.1",
    "qrcode": "^1.5.4",
    "viem": "^2.29.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@openzeppelin/contracts": "^5.1.0",
    "@solarity/chai-zkit": "^0.3.3",
    "@solarity/hardhat-zkit": "^0.5.16",
    "@typechain/ethers-v6": "^0.4.0",
    "@typechain/hardhat": "^8.0.0",
    "@types/jest": "^29.5.14",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@zk-kit/baby-jubjub": "^1.0.3",
    "dotenv": "^16.4.7",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "hardhat": "^2.19.4",
    "hardhat-gas-reporter": "^1.0.8",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "maci-crypto": "^2.0.0",
    "poseidon-lite": "^0.3.0",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.4.2",
    "solhint": "^5.0.5",
    "solidity-coverage": "^0.8.14",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
