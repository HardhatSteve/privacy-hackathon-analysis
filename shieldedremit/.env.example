# ===========================================
# ShieldedRemit Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# ===========================================
# Solana Configuration
# ===========================================

# Network: mainnet-beta, devnet, or testnet
NEXT_PUBLIC_SOLANA_NETWORK=devnet

# ===========================================
# RPC Configuration (Helius Recommended)
# ===========================================

# Helius RPC URL (get your key at https://helius.xyz)
NEXT_PUBLIC_HELIUS_RPC_URL=https://devnet.helius-rpc.com/?api-key=YOUR_API_KEY

# Helius API Key for enhanced features
NEXT_PUBLIC_HELIUS_API_KEY=your_helius_api_key

# ===========================================
# Privy Wallet Integration
# ===========================================

# Privy App ID (get yours at https://console.privy.io)
NEXT_PUBLIC_PRIVY_APP_ID=your_privy_app_id

# Privy App Secret (for server-side operations)
PRIVY_APP_SECRET=your_privy_app_secret

# ===========================================
# Privacy SDK Configuration
# ===========================================

# SilentSwap API Key (for obfuscated routing)
# Get your key at https://docs.silentswap.com
NEXT_PUBLIC_SILENTSWAP_API_KEY=your_silentswap_api_key

# ShadowWire Configuration (for ZK transfers)
# API URL defaults to https://api.shadowwire.io
NEXT_PUBLIC_SHADOWWIRE_API_URL=https://api.shadowwire.io

# ===========================================
# ShadowPay Configuration (RADR Labs)
# ===========================================

# ShadowPay API URL
NEXT_PUBLIC_SHADOWPAY_API_URL=https://api.shadowpay.io

# ShadowPay API Key
NEXT_PUBLIC_SHADOWPAY_API_KEY=your_shadowpay_api_key

# ===========================================
# ShadowID Configuration (RADR Labs)
# ===========================================

# ShadowID API URL
NEXT_PUBLIC_SHADOWID_API_URL=https://api.shadowid.io

# ShadowID API Key
NEXT_PUBLIC_SHADOWID_API_KEY=your_shadowid_api_key

# ===========================================
# Virtual Cards / Off-Ramp (Starpay)
# ===========================================

# Starpay API URL
NEXT_PUBLIC_STARPAY_API_URL=https://api.starpay.cards

# Starpay API Key
NEXT_PUBLIC_STARPAY_API_KEY=your_starpay_api_key

# ===========================================
# Compliance (Range Protocol)
# ===========================================

# Range Protocol API Key
RANGE_API_KEY=your_range_api_key

# Range Environment: sandbox or production
RANGE_ENVIRONMENT=sandbox

# ===========================================
# Analytics & Monitoring (Optional)
# ===========================================

# Privacy-preserving analytics (Plausible)
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=shieldedremit.com

# Sentry for error tracking (remove sensitive data)
SENTRY_DSN=https://your_sentry_dsn

# ===========================================
# Database (Optional - for user preferences)
# ===========================================

# Supabase or PostgreSQL connection
DATABASE_URL=postgresql://user:password@host:5432/shieldedremit

# ===========================================
# Feature Flags
# ===========================================

# Enable compliance features
NEXT_PUBLIC_ENABLE_COMPLIANCE=false

# Enable KYC features (ShadowID)
NEXT_PUBLIC_ENABLE_KYC=false

# Enable high privacy mode
NEXT_PUBLIC_ENABLE_HIGH_PRIVACY=true

# Enable virtual cards
NEXT_PUBLIC_ENABLE_VIRTUAL_CARDS=false

# Enable escrow features
NEXT_PUBLIC_ENABLE_ESCROW=false

# ===========================================
# Token Configuration
# ===========================================

# Default token for transfers
NEXT_PUBLIC_DEFAULT_TOKEN=USDC

# Enable USD1 stablecoin support
NEXT_PUBLIC_ENABLE_USD1=true
