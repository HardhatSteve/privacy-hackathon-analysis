{
    "manifest_version": 3,
    "name": "Privacy Cash Blinks",
    "description": "Private Solana payments via blink links on Twitter/X",
    "version": "1.0.0",
    "action": {
        "default_popup": "src/popup/popup.html"
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "https://twitter.com/*",
        "https://x.com/*",
        "http://localhost:3000/*",
        "https://solana-privacy-hack.vercel.app/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://twitter.com/*",
                "https://x.com/*"
            ],
            "js": [
                "src/content/content.tsx"
            ],
            "css": [
                "src/content/content.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "src/content/injected.js"
            ],
            "matches": [
                "https://twitter.com/*",
                "https://x.com/*"
            ]
        }
    ]
}