{
  "name": "aurorazk",
  "version": "1.0.0",
  "description": "Privacy-first dark pool DEX on Solana with ZK proofs",
  "private": true,
  "scripts": {
    "setup": "npm install && cd app && npm install && cd ../matcher && npm install",
    "build": "anchor build && cp target/idl/aurorazk.json app/lib/idl/",
    "deploy": "anchor deploy",
    "dev:app": "cd app && npm run dev",
    "dev:matcher": "cd matcher && npm run dev",
    "dev": "concurrently \"npm run dev:matcher\" \"npm run dev:app\"",
    "test": "anchor test"
  },
  "keywords": [
    "solana",
    "defi",
    "dark-pool",
    "zero-knowledge",
    "privacy",
    "dex"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
