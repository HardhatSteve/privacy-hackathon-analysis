# Database (Vercel Postgres)
# Get these values from Vercel Dashboard -> Storage -> Your Postgres DB -> .env.local tab
DATABASE_URL="postgres://default:xxxxx@xxxx-pooler.us-east-1.postgres.vercel-storage.com:5432/verceldb?sslmode=require&pgbouncer=true"
# DATABASE_URL_UNPOOLED is used by Prisma for migrations when using connection poolers (PgBouncer)
# Vercel provides this automatically. Locally, use the same value as DATABASE_URL if not using a pooler.
DATABASE_URL_UNPOOLED="postgres://default:xxxxx@xxxx.us-east-1.postgres.vercel-storage.com:5432/verceldb?sslmode=require"

# Solana
NEXT_PUBLIC_SOLANA_RPC_URL="https://api.mainnet-beta.solana.com"
NEXT_PUBLIC_SOLANA_NETWORK="mainnet-beta"

# App
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Rate Limiting (Upstash Redis)
# Get these values from console.upstash.com -> Your Database -> REST API section
UPSTASH_REDIS_REST_URL="https://xxxx.upstash.io"
UPSTASH_REDIS_REST_TOKEN="AXxxxxxxxxxxxx"

# Token Configuration
# Solana token mint addresses for supported payment tokens
